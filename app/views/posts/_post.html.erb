<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
  <strong>last updated: </strong><%= time_ago_in_words(post.updated_at) + " ago" %>
  </p>
  <p>
    <strong>Summary:</strong>
    <%= post.summary %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Published:</strong>
    <%= post.published %>
  </p>

</div>
